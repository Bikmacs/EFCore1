<Page x:Class="EfCore1.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:EfCore1.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" Background="#F0F0F0">
            <Button  Content="Добавить" Click="Button_Click" Margin="5"/>
            <Button  Content="Удалить" Click="Button_Click_1" Margin="5"/>
            <Button  Content="Поиск по ролям" Click="Button_Role" Margin="5"/>
            <Button  Content="Группы" Click="Button_Groups" Margin="5"/>
            <Button  Content="Вступить в группу" Click="Button_AddUser_Group" Margin="5"/>
        </StackPanel>

        <ListView Grid.Row="1" 
                  x:Name="UserListView"
                  ItemsSource="{Binding service.Users}"                    MouseDoubleClick="EditItem_Click">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Идентификатор: "/>
                            <TextBlock Text="{Binding Id}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Имя: "/>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Email: "/>
                            <TextBlock Text="{Binding Email}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Дата создания: "/>
                            <TextBlock Text="{Binding CreateAt}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Роль: "/>
                            <TextBlock Text="{Binding Role.Title}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView Grid.Row="1" Grid.Column="1" x:Name="UserGroupsList"
          ItemsSource="{Binding ElementName=UserListView, Path=SelectedItem.UserGroup}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Группа: " FontWeight="Bold"/>
                            <TextBlock Text="{Binding InterestGroup.Title}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text ="Дата вступления: "/>
                            <TextBlock Text="{Binding JoinedAt}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Модератор: "/>
                            <CheckBox IsChecked="{Binding IsModerator}" IsEnabled="False"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>