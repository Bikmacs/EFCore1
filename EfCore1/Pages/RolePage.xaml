<Page x:Class="EfCore1.Pages.RolePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EfCore1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RolePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <StackPanel>
                <Label>Название группы</Label>
                <TextBox x:Name="Find" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" TextChanged="TextBox_TextChanged"/>
            </StackPanel>
            <StackPanel>
                <Button Click="save" Margin="5">Сохранить</Button>
                <Button Click="back" Margin="5">Назад</Button>
            </StackPanel>
        </StackPanel>

        <ListView Grid.Column="1" 
                  ItemsSource="{Binding Users}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                         <Run Text="Имя:"/>
                         <Run Text="{Binding Name}"/>
                         <Run Text="Email:"/>
                         <Run Text="{Binding Email}"/>
                    </TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
